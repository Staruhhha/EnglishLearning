<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnglishLearning" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tool_color</item>
        <item name="colorPrimaryVariant">@color/back_tool</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="NoActionBar" parent="Theme.EnglishLearning">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewLight" parent="Theme.EnglishLearning">
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/montserrat_400</item>
        <item name="android:fontFamily">@font/montserrat_400</item>
    </style>

    <style name="TextViewBlack" parent="Theme.EnglishLearning">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_400</item>
        <item name="android:fontFamily">@font/montserrat_400</item>
    </style>

    <style name="tab_items" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat_400</item>
    </style>

</resources>