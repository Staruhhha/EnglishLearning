<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RegistrationSecondStepFragment">

    <TextView
        android:id="@+id/text_registration_2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registration_2"
        android:layout_margin="10dp"
        style="@style/TextViewBlack"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/email_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/custom_email_icon"
        android:drawablePadding="10dp"
        android:hint="Электронная почта"
        android:minHeight="48dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_registration_2"
        tools:layout_editor_absoluteX="10dp"
        style="@style/TextViewBlack"
        android:textSize="16sp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/password_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/custom_password_icon"
        android:drawablePadding="10dp"
        android:hint="Пароль"
        android:minHeight="48dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/email_registration"
        tools:layout_editor_absoluteX="10dp"
        style="@style/TextViewBlack"
        android:textSize="16sp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/re_password_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/custom_password_icon"
        android:drawablePadding="10dp"
        android:hint="Повтор пароля"
        android:minHeight="48dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/password_registration"
        tools:layout_editor_absoluteX="10dp"
        style="@style/TextViewBlack"
        android:textSize="16sp"
        android:inputType="textPassword"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registration_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="20dp"
        style="@style/TextViewLight"
        android:background="@drawable/custom_button"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="@string/reg_btn"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/re_password_registration"/>

</androidx.constraintlayout.widget.ConstraintLayout>